+      *)   PEAR_INSTALLDIR=$libdir/php5;;
     esac
   fi
 
@@ -1170,12 +1170,12 @@ test "$program_suffix" = "NONE" && progr
 
 case $libdir in
   '${exec_prefix}/lib')
-    libdir=$libdir/php
