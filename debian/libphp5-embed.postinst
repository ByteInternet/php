#!/bin/sh

set -e

CONFDIR=/etc/php5/embed/conf.d

if [ -L $CONFDIR ]; then
    rm $CONFDIR
    mkdir $CONFDIR
fi

if [ "$1" = "configure" ]; then
    ldconfig

    phpini="/etc/php5/embed/php.ini"
    ucf /usr/share/php5/php.ini-production $phpini
    ucfr libphp5-embed $phpini
fi

#DEBHELPER#

exit 0
